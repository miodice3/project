<%= link_to "Please click here to create a new location", new_location_path %><br><br>

<% @locations.each do |l| %>
    <%= l.name %> - Owners Name: <%= l.owner.name %><br>
    <%= l.utility %>, <%= l.zone %>, meter type: <%= l.meter_type %><br>
    <%= l.state %>, <%= l.country %><br>
    Total Estimated Capacity: <%= l.annual_capacity %> kWh/year<br>

    The Owner has marked this as: <%= l.status %><br>
    <% if current_user == l.owner_id %>
            <%= link_to "Click to see individual location and edit", location_path(l.id) %><br>
        <% else %>
           <%= link_to "Click to see details or submit contract offer", location_path(l.id) %><br>
    <% end %>

    <br><br>
<% end %>